pipeline {
    agent {
        docker {
            image 'python:3.6'
            args '--user root'
        }
    }
    stages {
        stage('Install extra packages') {
            steps {
                sh '''
                    echo "install extra packages"
                    pip install git+ssh://git@github.com/CanalTP/githubflow_release/pull/17/commits/60cdc669b57dfaa0feb7a12ac18117bf2dff0195
                '''
            }
        }
        stage('Change version form cargo.toml files') {
            steps {
                sh '''
                    $VERSION=$(echo githubflow_get_new_version --release-type $RELEASE_TYPE  --remote-name origin)
                    sed -i -e "s/^version\s*=\s*\".*\"/version = \"$VERSION\"/" Cargo.toml
                    #git add .
                    #git commit -m "[Versioned] New $RELEASE_TYPE version $VERSION"
                '''
            }
        }
        stage('Create and push new version') {
            steps {
                sh '''
                    githubflow_release --release-type $RELEASE_TYPE --base-branch master --github-repo azime/rstest  --remote-name origin  --dry-run
                '''
            }
        }
    }
}